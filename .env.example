# Authentication
GITHUB_TOKEN=your-github-token-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# LLM Provider Configuration
USE_PERPLEXITY=false  # Set to 'true' to use Perplexity instead of DeepSeek

# DeepSeek Configuration
DEEPSEEK_ENDPOINT=https://models.inference.ai.azure.com
DEEPSEEK_MODEL=DeepSeek-V3

# Perplexity Configuration
PERPLEXITY_MODEL=perplexity/sonar  # More efficient for free tier credit usage
SITE_URL=https://task-master-ai.app  # For OpenRouter attribution
SITE_NAME=Task Master AI  # For OpenRouter attribution

# Common Model Configuration
MAX_TOKENS=2000  # Maximum tokens for model responses
TEMPERATURE=0.7  # Temperature for model responses

# App Configuration
DEBUG=false

# Task Management Configuration
DEFAULT_SUBTASKS=3  # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium  # Default priority for generated tasks
PROJECT_NAME=Task-Master  # Project name for tasks.json metadata 